@{Layout = "_Layout";}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;
<h1>Clients</h1><hr>
@if(@Model.Count == 0)
{
  <p><em>No clients have been added</em></p>
}
@foreach(Client client in Model)
{
  <h5>@Html.ActionLink($"{client.Name}", "Name", new {id= client.ClientId})</h5>
}
<p>@Html.ActionLink("Add New Client", "Create")</p>